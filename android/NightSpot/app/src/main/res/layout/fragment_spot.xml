<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SpotFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/spot_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.11"
        app:cardCornerRadius="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        >
    <ImageView
        android:id="@+id/spotImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_launcher_background">

    </ImageView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/spotName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/spot_card"
        app:layout_constraintTop_toTopOf="@id/spot_card"
        app:layout_constraintBottom_toBottomOf="@id/spot_card"
        android:text="Spot Name"
        android:layout_marginLeft="15dp"
        android:textSize="20sp">
    </TextView>

    <TextView
        android:id="@+id/spot_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spot_card"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        android:text="Spot position">

    </TextView>

    <TextView
        android:id="@+id/spot_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Spot Contact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spot_position">

    </TextView>

    <TextView
        android:id="@+id/spot_timetables"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Spot Time Tables"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spot_contact">

    </TextView>





</androidx.constraintlayout.widget.ConstraintLayout>
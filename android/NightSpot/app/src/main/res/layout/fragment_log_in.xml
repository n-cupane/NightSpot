<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Nightviolet">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ns_logo"
        app:layout_constraintBottom_toTopOf="@+id/Signin_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="signin"
        android:fontFamily="@font/chirp_heavy"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/login_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/login_header"
        android:layout_marginTop="120dp" />

    <TextView
        android:id="@+id/login_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:fontFamily="@font/chirp_heavy"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/log_in_email_layout"
        app:layout_constraintTop_toBottomOf="@id/Signin_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="120dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/log_in_email_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.7"

        app:layout_constraintTop_toBottomOf="@id/login_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/log_in_email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/log_in_email"

            android:layout_marginStart="13dp"

            android:text="@string/username"
            android:fontFamily="@font/chirp_regular"/>

        <EditText
            android:paddingLeft="15dp"
            android:id="@+id/log_in_email"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.69"
            app:layout_constraintWidth_percent="1"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/log_in_email_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColorHint="@color/white"
            android:background="@drawable/round_orange_edit_text_border"
            android:hint="@string/john_email" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/log_in_password_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.7"

        app:layout_constraintTop_toBottomOf="@id/log_in_email_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/log_in_password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/log_in_password"
            android:layout_marginStart="13dp"

            android:text="@string/password"
            android:fontFamily="@font/chirp_regular"/>

        <EditText
            android:id="@+id/log_in_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.69"
            android:paddingLeft="15dp"
            app:layout_constraintTop_toBottomOf="@id/log_in_password_label"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@drawable/round_orange_edit_text_border"
            android:hint="@string/password"
            android:inputType="textPassword"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <Button
        android:id="@+id/log_in"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_percent="0.1"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/log_in_password_layout"

        android:layout_marginTop="50dp"

        android:text="@string/login"
        app:backgroundTint="@null"
        android:background="@drawable/round_orange_button"
        android:textColor="@color/grey"
        android:fontFamily="@font/chirp_bold" />

</androidx.constraintlayout.widget.ConstraintLayout>